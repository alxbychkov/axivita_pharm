{
  "name": "axivita-pharm",
  "version": "1.0.0",
  "description": "Axivita Pharm website - multi-page pharmaceutical company website",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=production vite",
    "build:en": "vite build --mode en",
    "build:de": "vite build --mode de",
    "build": "npm run build:en && npm run build:de",
    "build:gh-pages": "cross-env NODE_ENV=development npm run build",
    "preview": "vite preview --outDir dist",
    "deploy:gh-pages": "cross-env NODE_ENV=development npm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-html": "^7.1.0",
    "gh-pages": "^6.3.0",
    "sharp": "^0.34.3",
    "vite": "^5.0.0",
    "vite-imagetools": "^7.1.0",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-image-presets": "^0.3.4",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "keywords": [
    "pharmaceutical",
    "website",
    "vite",
    "html",
    "css"
  ],
  "author": "Aleksandr Bychkov",
  "license": "MIT"
}
